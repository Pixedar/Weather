<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pixedar.weather.DataView3">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <com.github.mikephil.charting.charts.BarChart xmlns:chart="http://schemas.android.com/apk/res-auto"
            android:id="@+id/maxTempChart"
            android:layout_width="match_parent"
            android:layout_height="270dp" />

        <com.github.mikephil.charting.charts.BarChart xmlns:chart="http://schemas.android.com/apk/res-auto"
            android:id="@+id/avTempChart"
            android:layout_width="match_parent"
            android:layout_height="270dp" />

        <com.github.mikephil.charting.charts.BarChart xmlns:chart="http://schemas.android.com/apk/res-auto"
            android:id="@+id/amplTempChart"
            android:layout_width="match_parent"
            android:layout_height="270dp" />

        <com.github.mikephil.charting.charts.BarChart xmlns:chart="http://schemas.android.com/apk/res-auto"
            android:id="@+id/humChart"
            android:layout_width="match_parent"
            android:layout_height="270dp" />

        <com.github.mikephil.charting.charts.BarChart xmlns:chart="http://schemas.android.com/apk/res-auto"
            android:id="@+id/lightChart"
            android:layout_width="match_parent"
            android:layout_height="270dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Rekordy"
            android:id="@+id/records"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/textView"
            android:layout_gravity="left" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/textView2"
            android:layout_gravity="left" />


    </LinearLayout>
    </ScrollView>
</RelativeLayout>
